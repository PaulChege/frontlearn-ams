<div class="container">
	<h4>Schools</h4>
	<div class="float-right">
		<%= link_to  "Create School", new_school_path, :class => "btn btn-outline-primary btn-sm"%>
	</div>
	<br/>
	<br/>
	<div class="row">
			<% @schools.each do |school|%>
					<div class="card mx-sm-3">
							<div class="card-body">
									<%= school.name %>
							</div >
							<%= link_to "Courses", school_courses_path(school), 
								:class => "btn btn-sm btn-outline-primary mx-sm-2" %>
							<%= link_to "Delete", school_path(school), 
								method: :delete, 
								data: { 
									confirm_swal: "Are you sure you want to delete the school of #{school.name} ?"
								}, 
								:class => "btn btn-sm btn-outline-danger mx-sm-2" %>
					</div>
			<% end%>
    </div>
</div>