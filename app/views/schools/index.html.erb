<div class="container">
	<h4><i class='fas fa-school'></i>Schools</h4>
	<div class="float-right">
		<%= link_to new_school_path, 
			:class => "btn btn-outline-primary btn-sm" do %>
        <i class='fas fa-plus'></i> Create School
      <% end %>
	</div>
	<br/>
	<br/>
	<br/>
	<div class="row">
		<% @schools.each do |school|%>
			<div class="card fixed-width mx-sm-3">
				<div class="card-body">
					<h5 class="lead"><%= school.name %></h5>
					<br/>
					<%= link_to school_courses_path(school), 
						:class => "btn btn-sm btn-outline-primary mx-sm-2" do %>
						<i class='fas fa-book'></i> Courses(<%=school.courses.count%>)
					<% end %>
					<%= link_to school_path(school), 
						method: :delete, 
						data: { 
							confirm_swal: "Are you sure you want to delete the School of #{school.name} ?"
						}, 
						:class => "btn btn-sm btn-outline-danger mx-sm-2" do %>
						<i class='far fa-trash-alt'></i> Delete
					<% end %>
				</div>
			</div>
		<% end%>
	</div>
</div>