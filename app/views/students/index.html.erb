<div class="container">
	<h4><i class='fas fa-user-graduate'></i> Students</h4>
	<%if can? :modify, Student%>
		<%= link_to new_student_path, 
			:class => "btn btn-outline-primary float-right btn-sm" do %>
		<i class='fas fa-plus'></i> Add Student
	<% end %>
	<%end%>
	<br/>
	<br/>
	<table class="table table-bordered table-responsive-sm table-sm">
	<thead class="thead-light">
		<th>Admission No.</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Course</th>
		<th>Intake</th>
		<th>Email</th>
		<th>Mobile Number</th>
		<th></th>
	</thead>
		<tbody>
		<% @students.each do |student| %>
			<tr>
				<td>
					<%= student.admission_no %>
				</td>
				<td>
					<%= student.first_name %>
				</td>
				<td>
					<%= student.last_name %>
				</td>
				<td>
					<%= student.course.full_course_name %>
				</td>
				<td>
					<%= student.intake %>
				</td>
				<td>
					<%= student.email %>
				</td>
				<td>
					<%= student.mobile_number %>
				</td>
				<% if can? :modify, Student %>
				<td>
					<%= link_to edit_student_path(student), 
						:class => "btn btn-outline-primary btn-sm mx-sm-2" do %>
						<i class='far fa-edit'></i> Edit
					<% end %>
					<%= link_to student_path(student), method: :delete, 
						:class => "btn btn-outline-danger btn-sm mx-sm-2" do %>
						<i class='far fa-trash-alt'></i> Delete
					<% end %>
				</td>
				<%end%>
			</tr>
		<% end %>
	</tbody>
	</table>
	<br/>
	<% unless @students.empty? %>
		<div class="digg_pagination">
			<%= will_paginate @students %>
		</div>
	<% end %>
</div>