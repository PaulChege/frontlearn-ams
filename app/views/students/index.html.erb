<div class="container">
    <div class="row float-right">
       <%= link_to  "Add Student", new_student_path, :class => "btn btn-primary"%>
    </div>
    <table class="table">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Admission No.</th>
        <th>Course</th>
        <th>Intake</th>
        <th>Email</th>
        <th>Mobile Number</th>
    </thead>
     <tbody>
        <% @students.each do |student| %>
            <tr>
                <td>
                    <%= student.first_name %>
                </td>
                 <td>
                    <%= student.last_name %>
                </td>
                <td>
                    <%= student.admission_no %>
                </td>
                <td>
                    <%= student.course.full_course_name %>
                </td>
                <td>
                    <%= student.intake %>
                </td>
                <td>
                    <%= student.email %>
                </td>
                <td>
                    <%= student.mobile_number %>
                </td>
                <td>
                    <%= link_to "Edit", edit_student_path(student), :class => "btn btn-primary"%>
                </td>
                <td>
                    <%= link_to "Delete", student_path(student), method: :delete, :class => "btn btn-danger"%>
                </td>
            </tr>
            
        <% end %>
    </tbody>
    </table>
</div>