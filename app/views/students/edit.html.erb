<div class="container">
  <div class = "card col-sm-6 mx-auto">
    <div class="card-body">
    <h4 class="text-center">Edit Student</h4>
    <br/>
    <%= render "shared/error_messages", resource: @student %>
    <%= form_for @student, url: student_path(@student), method: :patch do |f| %>
    	<div class="form-group">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "full name", class: "form-control" %>
      </div>
			<div class="form-group">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "full name", class: "form-control" %>
      </div>
			<div class="form-group">
          <%= f.label :course %><br />
          <%= collection_select(:student, :course_id, Course.all, :id, :full_course_name) %>
      </div>
      <div class="form-group">
          <%= f.label "Intake" %><br />
          <%= f.select :intake_month, Student.intake_months.keys.to_a, class: "form-control" %>
          <%= f.select :intake_year, Student.get_intake_year_options, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control" %>
      </div>
			<div class="form-group">
        <%= f.label :mobile_number %><br />
        <%= f.text_field :mobile_number, autofocus: true, autocomplete: "mobile_number" ,class: "form-control" %>
      </div>
      <br/>
      <%= button_tag(:class => "btn btn-primary float-right") do %>
        <i class='fas fa-save'></i> Save
      <% end %>
    <% end %>
    </div>
  </div>
</div>

