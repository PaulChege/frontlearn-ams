<div class="container">
	<h5>Edit Assessment</h5>
  <h6><%= @course.full_course_name + " | " + @unit.full_unit_name %></h6>
  <%= "Intake: " + @intake + " | " + "Semester starting: " + @assessment.full_semester_name %>
	<br/>
  <%= form_tag results_update_all_path(@redirect_params), method: :patch do %>
    <%= submit_tag "Save ", class: "btn btn-primary float-right"%>
    <br/>
    <br/>
    <table class="table table-bordered table-responsive">
      <thead>
        <th>Admission No.</th>
        <th>Full Name</th>
        <th>Attendance (30)</th>
        <th>Assignments (30)</th>
        <th>Practicals (30)</th>
        <th>CATs (30)</th>
        <th>Final Exam (100)</th>
        <th>Final Mark</th>
        <th>Final Grade</th>
      </thead>
      <tbody>
        <% @results.each do |result| %>
          <%= fields_for "results[]", result do |f| %>
            <tr>
              <td><%= result.student.admission_no%></td>
              <td><%= result.student.full_name%></td>
              <td><%= f.number_field :attendance, max: 30, step: ".1" %></td>
              <td><%= f.number_field :assignments, max: 30, step: ".1" %></td>
              <td><%= f.number_field :practicals, max: 30, step: ".1" %></td>
              <td><%= f.number_field :cats, max: 30, step: ".1"  %></td>
              <td><%= f.number_field :final_exam, max: 100, step: ".1" %></td>    
              <td><b><%= result.final_mark %></b></td>  
              <td><b><%= result.final_grade %></b></td>  
            </tr>
          <%end%>
        <%end%>
      </tbody>
    </table>
  <% end%>
</div>