<div class="container">
	<h4><i class='fas fa-book-open'></i> Units for All Courses</h4>
	<br/>
  <div class = "card col-sm-6 mx-auto">
    <div class="card-body">
    <h4 class="text-center">Edit Unit</h2>
    <%= render "shared/error_messages", resource: @unit %>
    <%= form_for @unit, url: unit_path, method: :patch do |f| %>
        <div class="form-group">
            <%= f.label :code %><br />
            <%= f.text_field :code, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, autocomplete: "name" ,class: "form-control" %>
        </div>
        <%= button_tag(:class => "btn btn-primary float-right") do %>
        <i class='fas fa-save'></i> Save
      <% end %>
    <% end %>
    </div>
  </div>
</div>