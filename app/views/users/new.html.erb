<div class="container">
  <div class = "card col-sm-6 mx-auto">
    <div class="card-body">
    <h2>Add User</h2>
    <%= render "shared/error_messages", resource: @user %>
    <%= form_for @user, url: users_path do |f| %>
    <div class="form-group">
        <%= f.label :full_name %><br />
        <%= f.text_field :full_name, autofocus: true, autocomplete: "full name" ,class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control" %>
      </div>
       <div class="form-group">
       <% User.roles.keys.each do |role| %>
          <%= f.label :role, class: "mx-sm-2" do%> 
          <%= f.radio_button :role, role%>
          <%= role.humanize%>
          <%end%>
        <% end %>      
      </div>

      <div class="form-group">
        <%= f.label :password %><br/>
        <%= f.password_field :password, autocomplete: "new-password" , class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      
        <%= f.submit "Add User", class: "btn btn-primary"%>
    
    <% end %>
    </div>
  </div>
</div>

