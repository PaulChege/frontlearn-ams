<div class="container">
	<h4>Users</h4>
	<div class="row float-right">
			<%= link_to  "Add User", new_user_path, :class => "btn btn-primary"%>
	</div>
	<br/>
	<br/>
	<table class="table table-responsive-sm table-bordered table-sm">
	<thead class="thead-light">
			<th>Full Name</th>
			<th>Email</th>
			<th>Role</th>
	</thead>
		<tbody>
			<% @users.each do |user| %>
					<tr>
							<td>
									<%= user.full_name %>
							</td>
							<td>
									<%= user.email %>
							</td>
								<td>
									<%= user.role.humanize%>
							</td>
							<td>
									<%= link_to "Edit", edit_user_path(user), :class => "btn btn-sm btn-primary"%>
									<%= link_to "Delete", user_path(user), method: :delete, :class => "btn btn-sm btn-danger"%>
							</td>
					</tr>
			<% end %>
	</tbody>
	</table>
</div>