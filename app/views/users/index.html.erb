<div class="container">
	<h4><i class='fas fa-user'></i> Users</h4>
	<div class="float-right">
		<%= link_to new_user_path, 
			:class => "btn btn-outline-primary btn-sm" do %>
			<i class="fas fa-user-plus"></i> Add User
		<%end%>
	</div>
	<br/>
	<br/>
	<table class="table table-responsive-sm table-bordered table-sm">
	<thead class="thead-light">
		<th>Full Name</th>
		<th>Email</th>
		<th>Role</th>
		<th></th>
	</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
						<td>
							<%= user.full_name %>
						</td>
						<td>
							<%= user.email %>
						</td>
						<td>
							<%= user.role.humanize%>
						</td>
						<td>
							<%= link_to edit_user_path(user), 
								:class => "btn btn-sm btn-outline-primary mx-sm-2" do %>
								<i class="far fa-edit"></i> Edit
							<%end%>
							<% if user != current_user %>
								<%= link_to user_path(user), 
									method: :delete, 
									data: { 
										confirm_swal: "Are you sure you want to delete user - #{user.full_name} ?"
									}, 
									:class => "btn btn-sm btn-outline-danger" do %>
									<i class="far fa-trash-alt"></i>Delete
								<%end%>
								<%end%>
						</td>
				</tr>
			<% end %>
	</tbody>
	</table>
	<br/>
	<% unless @users.empty? %>
		<div class="digg_pagination">
			<%= will_paginate @users %>
		</div>
	<% end %>
</div>