<div class="container">
	<h4>Users</h4>
	<div class="float-right">
			<%= link_to "Add User", new_user_path, :class => "btn btn-outline-primary btn-sm"%>
	</div>
	<br/>
	<br/>
	<table class="table table-responsive-sm table-bordered table-sm">
	<thead class="thead-light">
			<th>Full Name</th>
			<th>Email</th>
			<th>Role</th>
			<th></th>
	</thead>
		<tbody>
			<% @users.each do |user| %>
					<tr>
							<td>
									<%= user.full_name %>
							</td>
							<td>
									<%= user.email %>
							</td>
								<td>
									<%= user.role.humanize%>
							</td>
							
							<td>
									<%= link_to "Edit", edit_user_path(user), 
										:class => "btn btn-sm btn-outline-primary mx-sm-2"%>
									<% if user != current_user %>
									<%= link_to "Delete", user_path(user), 
										method: :delete, 
										data: { 
											confirm_swal: "Are you sure you want to delete user - #{user.full_name} ?"
										}, 
										:class => "btn btn-sm btn-outline-danger"%>
									<%end%>
							</td>
					</tr>
			<% end %>
	</tbody>
	</table>
</div>