<div class="container">
  <div class = "card col-sm-6 mx-auto">
    <div class="card-body">
    <h4 class="text-center">Create Course</h4>
    <br/>
    <%= render "shared/error_messages", resource: @course %>
    <%= form_for @course, url: school_courses_path(@school) do |f| %>
      <div class="form-group">
          <%= f.label :level %><br />
          <%= f.select :level, Course.levels.keys.to_a, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class: "form-control" %>
      </div>
      <br/>
      <%= button_tag(:class => "btn btn-primary float-right") do %>
        <i class='fas fa-plus'></i> Create Course
      <% end %>
    <% end %>
    </div>
  </div>
</div>

