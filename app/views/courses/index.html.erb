<div class="container">
    <h5>School of <%=@school.name%></h5>
    <%= link_to "Delete", school_path(@school), method: :delete, :class => "btn btn-sm btn-danger" %>

    <div class="row float-right">
       <%= link_to  "Add Course", new_school_course_path(@school), :class => "btn btn-primary"%>
    </div>
    <br/>
    <br/>
    <div class="row">
        <% @courses.each do |course|%>
            <div class="card">
                <div class="card-body">
                    <%= course.level%>
                    in
                    <%= course.name %>
                </div >
                <%= link_to "Units", "#", method: :delete, :class => "btn btn-sm btn-primary" %>
            </div>
        <% end%>
    </div>
</div>