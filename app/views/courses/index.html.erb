<div class="container">
	<h4><i class='fas fa-school'></i> School of <%=@school.name%></h4>
	<div class="float-right">
		<%= link_to new_school_course_path(@school), 
			:class => "btn btn-sm btn-outline-primary" do %>
        <i class='fas fa-plus'></i> Create Course
      <% end %>
	</div>
	<br/>
	<br/>
	<br/>
	<div class="row">
		<% @courses.each do |course|%>
			<div class="card fixed-width mx-sm-3">
				<div class="card-body">
					<h5 class="lead"><%= course.full_course_name%></h5>
					<br/>
					<%= link_to edit_school_course_path(@school, course), 
						:class => "btn btn-sm btn-outline-primary mx-sm-2" do %>
						<i class='far fa-edit'></i> Edit
					<% end %>
					<%= link_to school_course_units_path(@school, course), 
						:class => "btn btn-sm btn-outline-info mx-sm-2" do %>
						<i class='fas fa-book-open'></i> Units(<%= course.units.count %>)
					<% end %>
					<%= link_to school_course_path(@school, course), 
						method: :delete,
						data: { 
							confirm_swal: "Are you sure you want to delete course - #{course.full_course_name} ?"
						}, 
						:class => "btn btn-sm btn-outline-danger mx-sm-2" do %>
						<i class='far fa-trash-alt'></i> Delete
					<% end %>
				</div>
			</div>
		<% end%>
	</div>
</div>